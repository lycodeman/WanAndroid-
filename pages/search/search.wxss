/* pages/search/search.wxss */
.logout {
  border-radius: 48px;
  background-color: #ff0000;
  font-size: 24px;
  color: white;
  align-items: center;
  text-align: center;
  height: 48px;
  margin: 16px;
  justify-content: center;
  display: flex;
}
.title {
  color: white;
  font-size: 32rpx;
  font-weight: 700;
}
.back {
  height: 48rpx;
  width: 48rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: 0rpx 16rpx 20rpx 16rpx;
  flex-direction: column;
}
.search {
  height: 48rpx;
  width: 48rpx;
  margin-right: 16px;
}

.container {
  position: relative;
  background-color: #F5F5F5;
  justify-content: flex-start;
}
.root {
  display: flex;
  flex-direction: column;
}

.input {
  color: white;
  flex: 1;
  font-size: 16px;
  margin-left: 16px;
  margin-right: 16px;
  height: 100%;
}
.placeholder-input {
  color: white;
  flex: 1;
  font-size: 16px;
  margin-left: 16px;
  margin-right: 16px;
  height: 100%;
}
.close {
  height: 16px;
  width: 16px;
}
.input-container {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin: 8px 16px;
  border-radius: 48px;
  align-items: center;
  justify-content: center;
  height: 48px;
  background-color: rgba(120, 00, 00, 0.3);
}
.hot-search {
  color: #ff0000;
  font-size: 16px;
  margin-left: 16px;
  margin-top: 16px;

}
.search-close {
  height: 24px;
  width: 24px;
  margin-right: 16px;
}